<Window x:Name="OverlayWindow" x:Class="Slippi_Stats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slippi_Stats"
        mc:Ignorable="d"
        Title="Slippi Stats Overlay" Height="500" Width="300" ResizeMode="NoResize" Topmost="True" RenderTransformOrigin="0.5,0.5" Opacity="0.8" WindowStyle="None" AllowsTransparency="True" Background="#FFC7C7C7" BorderBrush="Black" BorderThickness="3,3,3,3">
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid x:Name="OverlayGrid">
        <TextBlock x:Name="Titlebox" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="75" Width="232"/>
    </Grid>
</Window>
